<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                                 http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                                 http://www.springframework.org/schema/security
                                 http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <!--http pattern="/css/**" security="none"/-->
    <http auto-config="true" access-denied-page="/access-denied.do" use-expressions="true">
        <intercept-url pattern="/home.do" access="isAuthenticated()"/>
        <intercept-url pattern="/admin/**" access="hasRole('ADMINISTRATOR')"/>
        <intercept-url pattern="/es-type/**" access="hasRole('ADMINISTRATOR')"/>
        <intercept-url pattern="/ptm/**" access="hasRole('ADMINISTRATOR')"/>
        <intercept-url pattern="/vehicle-group/**" access="hasRole('ADMINISTRATOR')"/>
        <intercept-url pattern="/oper/**" access="hasRole('OPERATOR')"/>
        <intercept-url pattern="/report/**" access="hasAnyRole('ADMINISTRATOR', 'OPERATOR')"/>

        <!-- Override default login and logout pages -->
        <form-login login-page="/login.do"
                    default-target-url="/home.do"
                    authentication-failure-url="/login.do?login_error=1"
                    authentication-success-handler-ref="authenticationSuccessHandler"/>
        <logout logout-url="/logout.do" logout-success-url="/home.do"/>
    </http>
    <beans:bean id="authenticationSuccessHandler" class="lasgis.react.start.security.CustomAuthenticationSuccessHandler"/>

    <authentication-manager>
        <authentication-provider user-service-ref="userDetailsService">
            <password-encoder hash="sha-256" base64="false"/>
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="userDetailsService" class="lasgis.react.start.security.UserDetailsServiceImpl"/>

</beans:beans>
