<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="reactJSXLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.home}/logs/react_jsx_frontend.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${catalina.home}/logs/react_jsx_frontend_%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date{yyy-MM-dd HH:mm:ss.SSSXXX} %-5level [%thread] %logger{30}%Line - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- TRACE, DEBUG, INFO, WARN, ERROR, OFF -->
    <logger name="org.springframework" level="WARN"/>

    <logger name="org.springframework.web.context" level="WARN"/>

    <logger name="ru.glonass" level="DEBUG"/>

    <root level="WARN">
        <appender-ref ref="reactJSXLog"/>
    </root>

</configuration>