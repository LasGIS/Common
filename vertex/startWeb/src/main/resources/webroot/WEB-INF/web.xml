<?xml version="1.0" encoding="UTF-8"?>
<web-app id="GMP" version="2.4"
    xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>GMP Web</display-name>

    <!--Application context-->
    <!--last one will be copied on build-->
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>Portal</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            WEB-INF/dao-api-context.xml
            WEB-INF/datasource-pool-config-cluster.xml
            WEB-INF/datasource-pool-config-single.xml
            WEB-INF/report-datasource-pool-config-cluster.xml
            WEB-INF/report-datasource-pool-config-single.xml
            WEB-INF/aop-context.xml
            WEB-INF/method-repeater-context.xml
            WEB-INF/portal-aop-context.xml
            WEB-INF/report-dao-context.xml
            WEB-INF/message-api-context.xml
            WEB-INF/application-context.xml
            WEB-INF/application-context-security.xml
            WEB-INF/spring-dispatcher-servlet.xml
            WEB-INF/heartbeat-context.xml
        </param-value>
    </context-param>

    <context-param>
        <param-name>logbackConfigLocation</param-name>
        <param-value>/WEB-INF/properties/logback.xml</param-value>
    </context-param>

    <!--Dispatcher Servlet-->
    <servlet>
        <servlet-name>spring-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!--<load-on-startup>2</load-on-startup>-->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring-dispatcher-servlet.xml</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
           <param-name>encoding</param-name>
           <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
           <param-name>forceEncoding</param-name>
           <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>home.do</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>ru.glonass.era.logback.listener.LogbackConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <!-- ### Listeners and filters ### -->
    <listener id="AppStartupListener">
        <listener-class>ru.glonass.era.ui.app.listener.AppStartupListener</listener-class>
    </listener>

    <listener id="UserSessionListener">
        <listener-class>ru.glonass.era.ui.app.listener.UserSessionListener</listener-class>
    </listener>

    <error-page>
        <exception-type>org.springframework.security.core.AuthenticationException</exception-type>
        <location>/access-denied.do</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/access-denied.do</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/404.do</location>
    </error-page>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

</web-app>
