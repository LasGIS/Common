<configuration>
  <contextName>${HOSTNAME}</contextName>
  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/russianpost/tracking-portal-admin/tracking-portal-admin.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/russianpost/tracking-portal-admin/previous/tracking-portal-admin-%d{yyyy-MM-dd}.log.%i.gz</fileNamePattern>

      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>7</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1} - %replace(%m){'[\r\n]', ''}%n</pattern>
    </encoder>
  </appender>

  <appender name="perfFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/russianpost/tracking-portal-admin/tracking-portal-admin-perfstat.log</file>
    <encoder>
      <Pattern>%m%n</Pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>/var/log/russianpost/tracking-portal-admin/previous/tracking-portal-admin-perfstat.%d{yyyy-MM-dd}.log.gz</FileNamePattern>

      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
  </appender>

  <appender name="STASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
    <writeBufferSize><%= @json_log_forward_write_buffer_size %></writeBufferSize>
    <destination><%= @json_log_forward_string %></destination>
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <logLevel/>
        <logLevelValue/>
        <loggerName/>
        <stackTrace/>
        <threadName/>
        <mdc/>
        <context/>
        <message/>
        <pattern>
          <pattern>
            {
              "original_time":"%date{ISO8601}",
              "tag":"<%= @json_log_index_root %>.json.tracking-portal-admin",
              "index_root": "<%= @json_log_index_root %>"
            }
          </pattern>
        </pattern>
      </providers>
    </encoder>
  </appender>

  <logger name="ru.russianpost.tracking.trackingSpeed" additivity="false">
    <level value="<%= @tracking_portal_admin_log_level %>"/>
    <appender-ref ref="perfFileAppender"/>
  </logger>

  <logger name="org.springframework.security.ldap.authentication.ad.ActiveDirectoryLdapAuthenticationProvider" additivity="false">
    <level value="WARN"/>
    <appender-ref ref="FILE"/>
    <appender-ref ref="STASH"/>
  </logger>

  <root level="<%= @tracking_portal_admin_log_level %>">
    <appender-ref ref="FILE"/>
    <appender-ref ref="STASH"/>
  </root>
</configuration>
